{
    "name": "main-website",
    "version": "1.0.0",
    "description": "The main website for flameys.net",
    "main": "server.js",
    "scripts": {
        "start": "node server.js"
    },
    "keywords": [],
    "author": "Minecat",
    "license": "GPL-3.0-only",
    "installPath": "~/flameys.net/mainSite/",
    "dependencies": {
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "express": "^4.18.4"
    },
    "nginx": {
        "service": {
            "name": "main-website",
            "port": 8080,
            "uri": "",
            "https": true,
            "servers": ["flameys.net"]
        },
        "flameys.net": {
            "urls": ["flameys.net", "www.flameys.net"],
            "certificate": "/etc/letsencrypt/live/flameys.net/fullchain.pem",
            "certificateKey": "/etc/letsencrypt/live/flameys.net/privkey.pem"
        }
    },
    "pm2": {
        "name": "main-website",
        "file": "server.js"
    }
}